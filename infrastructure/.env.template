# Environment configuration for L2 Market Data Infrastructure
# Copy this file to .env and configure your specific values

# ClickHouse Configuration
CLICKHOUSE_DB=l2_market_data
CLICKHOUSE_USER=l2_user
CLICKHOUSE_PASSWORD=l2_secure_pass
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_TCP_PORT=9000

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_LISTENER_PORT=9092
KAFKA_INTERNAL_PORT=29092
KAFKA_JMX_PORT=9101
KAFKA_AUTO_CREATE_TOPICS=false
KAFKA_LOG_RETENTION_HOURS=24
KAFKA_LOG_SEGMENT_BYTES=1073741824
KAFKA_NUM_NETWORK_THREADS=8
KAFKA_NUM_IO_THREADS=16

# Redis Configuration
REDIS_PORT=6380
REDIS_MAX_MEMORY=2gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Zookeeper Configuration
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Kafka UI Configuration
KAFKA_UI_PORT=8080

# Network Configuration
SUBNET=172.20.0.0/16

# Performance Settings
ULIMIT_NOFILE_SOFT=262144
ULIMIT_NOFILE_HARD=262144

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings
# Set these to secure values in production
REDIS_PASSWORD=""
CLICKHOUSE_READONLY_USER=readonly
CLICKHOUSE_READONLY_PASSWORD=readonly_pass